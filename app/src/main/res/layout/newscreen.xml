<?xml version="1.0" encoding="utf-8"?>

<FrameLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#F4F5F7"
            android:orientation="vertical"></LinearLayout>
<ScrollView

    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#F4F5F7"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FFFFFF">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="onclicktomain"
                android:text="Cancel"
                android:textSize="17dp"
                android:layout_marginLeft="24dp"
                android:layout_marginTop="56dp"
                android:textColor="#FF6464"
                android:textStyle="bold"/>

                <TextView

                    android:layout_width="match_parent"
                    android:textAlignment="textEnd"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="55dp"
                    android:layout_alignParentEnd="true"
                    android:text="1/2"
                    android:textSize="15dp"
                    android:textStyle="bold"
                    android:layout_marginEnd="24dp"/>
        </LinearLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="340dp"
            android:gravity="center"
            android:background="#ffff"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:layout_marginLeft="24dp"
                android:textColor="#3E5481"
                android:text="Ingredients"
                android:textStyle="bold"
                android:textSize="17dp"/>


            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/vector"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="70dp"
                android:layout_marginTop="28dp"
                android:layout_marginLeft="320dp"
                android:orientation="horizontal"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Group"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="24dp"
                android:textSize="15dp"
                android:textColor="#3E5481"
                android:textStyle="bold"
                android:layout_marginTop="28dp"
                android:layout_marginLeft="350dp"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/dragicon"
                android:layout_marginTop="94dp"
                android:layout_marginLeft="24dp"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/dragicon"
                android:layout_marginTop="185dp"
                android:layout_marginLeft="24dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_marginRight="24dp"
                android:layout_height="56dp"
                android:layout_marginLeft="56dp"
                android:layout_marginTop="78dp"
                android:background="@drawable/first"
                android:orientation="horizontal">

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="18dp"
                    android:layout_marginLeft="22dp"
                    android:text="Enter ingredient"
                    android:textColor="#9FA5C0"
                    android:textSize="15dp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_marginRight="24dp"
                android:layout_height="56dp"
                android:layout_marginLeft="56dp"
                android:layout_marginTop="168dp"
                android:background="@drawable/first"
                android:orientation="horizontal">
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="18dp"
                    android:layout_marginLeft="22dp"
                    android:text="Enter ingredient"
                    android:textColor="#9FA5C0"
                    android:textSize="15dp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_marginRight="24dp"
                android:layout_marginLeft="24dp"
                android:layout_marginTop="246dp"
                android:background="@drawable/first"
                android:orientation="horizontal"
                android:gravity="center">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/vector"
                    android:orientation="horizontal" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ingredient"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:textColor="#3E5481"
                    android:textSize="15dp" />

            </LinearLayout>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="340dp"
            android:background="#ffff"
            android:layout_marginTop="10dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="24dp"
                android:layout_marginTop="24dp"
                android:text="Steps"
                android:textSize="17dp"
                android:textColor="#3E5481"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/list"
                android:layout_marginLeft="24dp"
                android:layout_marginTop="69dp"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/dragicon"
                android:layout_marginTop="109dp"
                android:layout_marginLeft="24dp"
                />
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_marginRight="24dp"
                android:layout_height="44dp"
                android:background="@drawable/third"
                android:layout_marginTop="189dp"
                android:layout_marginLeft="56dp"
                >
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/camera"
                    android:layout_gravity="center"/>
            </FrameLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_marginRight="24dp"
                android:layout_height="112dp"
                android:layout_marginLeft="56dp"
                android:layout_marginTop="69dp"
                android:background="@drawable/second"
                android:orientation="horizontal">
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="90dp"
                    android:layout_marginLeft="16dp"
                    android:layout_marginEnd="8dp"
                    android:layout_marginTop="16dp"
                    android:text="Tell a little about your food"
                    android:textSize="12dp"
                    android:textColor="#3E5481"/>
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>
</ScrollView>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:background="#E0E0E0">
        <Button
            android:id="@+id/NextButton"
            android:layout_width="156dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="24dp"
            android:backgroundTint="#1FCC79"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:text="Next"
            android:textColor="#FFFFFF" />
        <Button
            android:layout_width="156dp"
            android:onClick="onclicktoback"
            android:layout_height="wrap_content"
            android:layout_marginLeft="24dp"
            android:gravity="center"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:backgroundTint="#F4F5F7"
            android:textColor="#2E3E5C"
            android:text="Back" />
    </RelativeLayout>

</FrameLayout>
